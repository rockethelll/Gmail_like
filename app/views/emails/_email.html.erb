<div class='card my-3'>
  <%= form_with(model: email, class:" my-3") do |form| %>
    <%= form.check_box :read, data: {id: email.id, action: "mails#toggle"}, class: "ms-2 align-middle rounded" %>

    <% if email.read == false %>
    <%= form.label 'Marquer comme Lu' %>

      <div class="text-danger fw-bold">
        <br>
        <p class='p-0 m-0'>Email ID : <%= email.id %></p>
        <br>
        <p class='p-0 m-0'>Objet : <%= email.object %></p>
        <br>
        <p class='p-0 m-0'>Message : <%= email.body %></p>
        <br>
      </div>
    <% else %>
    <%= form.label 'Marquer comme non Lu' %>
      <div class="text-success">
        <br>
        <p class='p-0 m-0'>Email ID : <%= email.id %></p>
        <br>
        <p class='p-0 m-0'>Objet : <%= email.object %></p>
        <br>
        <p class='p-0 m-0'>Message : <%= email.body %></p>
        <br>
      </div>
    <% end %>


  <% end %>
  <div class="text-center"><%= button_to "Delete", email_path(email), method: :delete, data: { "turbo-frame": "_top" }, class:'btn btn-success mb-3' %></div>
</div>
